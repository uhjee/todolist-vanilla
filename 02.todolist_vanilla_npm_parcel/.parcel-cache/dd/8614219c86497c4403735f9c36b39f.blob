/* COMMON */
body {
  background-color: #f2a154;
  /* font 속성은 자손들에게 상속 */
  color: #333;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.4;
}

p {
  /* inline 요소 아래에 문자열 공간 갖는 것 삭제를 위함 */
  display: block;
}

a {
  text-decoration: none;
}

.inner {
  width: 1100px;
  margin: 0 auto;
  position: relative;
}

.mark {
  width: 20px;
  height: 33px;
  margin: 0 5px;
  box-sizing: border-box;
}

.mark--green {
  background-color: #314e52;
}

.mark--lightgreen {
  background-color: #85b684;
}

.mark--grey {
  background-color: #a4a79d;
}

.mark--orange {
  background-color: #f27a54;
}

.mark--blank {
  border: 4px solid #909487;
}

.btn {
  display: block;
  width: 100px;
  padding: 10px;
  box-sizing: border-box;
  cursor: pointer;
  font-weight: 700;
  text-align: center;
  color: #536b48;
  transition: 0.13s;
}

.circle-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 27px;
  height: 27px;
  border-radius: 50%;
  box-sizing: border-box;
  color: #fff;
  background-color: #f2a154;
  cursor: pointer;
  transition: 0.15s;
}
.circle-btn:hover {
  transform: scale(1.2);
  background-color: #fff;
}
.circle-btn--edit {
  background-color: #536b48;
}
.circle-btn--edit:hover {
  border: 3px solid #536b48;
  color: #536b48;
}
.circle-btn--delete {
  background-color: #f27a54;
}
.circle-btn--delete:hover {
  border: 3px solid #f27a54;
  color: #f27a54;
}

/* HEADER */
header {
  width: 100%;
  position: fixed;
  top: 0;
  background-color: #f7f6e7;
  border-bottom: 1px solid #d8dcd1;
  z-index: 9;
  color: #656565;
}

header .inner {
  display: flex;
  height: 60px;
  justify-content: space-between;
  align-items: center;
}
header .inner .right {
  display: flex;
}
header .inner .right .search {
  height: 34px;
  position: relative;
  margin-right: 15px;
}

header .inner .right .search input {
  width: 100px;
  height: 34px;
  padding: 4px 10px;
  border: 1px solid #ccc;
  box-sizing: border-box;
  /* focus 시 브라우저에 세팅된 파란 테두리 없애도록 */
  outline: none;
  /* cross-browsing : 흰색 명시적 선언 */
  background-color: #fff;
  border-radius: 5px;
  color: #777;
  font-size: 12px;
  transition: 0.3s;
  cursor: pointer;
}
header .inner .right .search input:focus {
  width: 170px;
  border-color: #f27a54;
}

header .inner .right .search .material-icons {
  height: 24px;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 5px;
  margin: auto 0;
  transition: 0.3s;
}
header .inner .right .search.focused .material-icons {
  opacity: 0;
}

header .inner .right .user {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #314e52;
  font-weight: 700;
  width: 34px;
  height: 34px;
  border-radius: 50%;
  box-sizing: border-box;
}

header .inner .right .user:hover {
  border: 3px solid #314e52;
  font-size: 17px;
  background-color: #fff;
  color: #314e52;
  cursor: pointer;
  /* color: #f27a54; */
}

/* TODO CARD */
.todo-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  /* header height 만큼 아래부터  */
  top: 60px;
  bottom: 0;
  left: 0;
  right: 0;

  margin: auto auto;
  width: 770px;
  height: 600px;
  /* 자식 요소와 radius 를 묶을 방법이 있을 것 같다... 현재는 따로 따로 적용 */
  border-radius: 10px;
  background-color: #e7e6e1;
  box-shadow: 1px 1px rgba(0, 0, 0, 0.3);
}
.todo-container .todo--header {
  display: flex;
  height: 60px;
  align-items: center;
  /* padding: 10px; */
  background-color: #f7f6e7;
  border-radius: 10px 10px 0 0;
  position: relative;
}
.todo-container .todo--header .box {
  /* flex-container 의 크기 영향 x, 크기가 고정되어야 하는 flex item  축약형*/
  /* default) flex: 0 1 auto; */
  /* grow, shrink, flex-basis */
  flex: none;
  /* flex : 1; flex-container의 영향을 동등하게 나눠 받는다. */
  /* flex: 1; */
  margin-right: 15px;
}
.todo-container .todo--header .box--logo {
  width: 40px;
  height: 100%;
  position: relative;
}
.todo-container .todo--header .box--logo .logo {
  position: absolute;
  width: 20px;
  height: 35px;
  top: 0;
  background-color: #314e52;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.todo-container .todo--header .box--date {
  flex: 1;
  text-align: center;
  color: #909487;
  font-size: 18px;
}
.todo-container .todo--header .material-icons {
  margin: 0 15px 0 auto;
}

.todo-container .todo--body {
  max-height: calc(100% - 130px);
  padding: 20px 35px;
  box-sizing: border-box;
  /* 스크롤이 있는 경우에만 표현 */
  overflow-x: auto;
  background-color: #e7e6e1;
}

.todo-container .todo--body__item {
  display: flex;
  align-items: center;
  height: 70px;
  margin-bottom: 20px;
  padding: 5px 10px;
  box-sizing: border-box;
  border-radius: 3px;
  background-color: #d8dcd1;
  transition: transform 0.15s;
}

.todo-container .todo--body__item:hover {
  transform: scale(1.05);
  border-left: 12px solid #fff;
  border-right: 12px solid #fff;
}

/* 홀수 요소 back-color 세팅 */
.todo-container .todo--body__item:nth-child(2n-1) {
  background-color: #d9e0ca;
}

.todo-container .todo--body__item:last-child {
  margin-bottom: 0;
}

.todo-container .todo--body__item .mark {
  flex: none;
  margin-right: 20px;
  cursor: pointer;
}

.todo-container .todo--body__item .content {
  /* 글자수 overflow  '...' 표현 */
  max-width: calc(100% - 60px);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 18px;
  color: #62655a;
}
.todo-container .todo--body__item .btn-box {
  display: flex;
}
.todo-container .todo--body__item .btn-box .circle-btn {
  margin-left: 7px;
}
.todo-container .todo--body__item .btn-box .material-icons {
  font-size: 16px;
}

.todo-container .todo--footer {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 70px;
  border-radius: 0 0 10px 10px;
  background-color: #f7f6e7;
}

.todo-container .todo--footer .box--mark {
  width: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.todo-container .todo--footer .box--mark .mark {
  transition: background-color 0.35s;
  cursor: pointer;
}
.todo-container .todo--footer .box--mark .mark:hover {
  background-color: #f27a54;
  border: none;
}
.todo-container .todo--footer #input-todo {
  background-color: #f1f0e8;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  font-size: 18px;
  outline: none;
  border: 1px solid #e7e6e1;
  border-radius: 4px;
  color: #314e52;
  /* cursor: pointer; */
  transition: 0.2s;
}
.todo-container .todo--footer #input-todo.focused {
  background-color: #fff;
  border: 3px solid #85b684;
}

.todo-container .todo--footer .btn {
  position: relative;
}
.todo-container .todo--footer .btn:hover {
  background: transparent;
  transform: scale(1.2);
}
.todo-container .todo--footer .btn::before {
  color: #f2a154;
  content: '[';
  display: block;
  font-size: 1.5em;
  top: 5px;
  left: 30px;
  opacity: 0;
  position: absolute;
  transition: all 300ms ease-in-out;
  transition-property: all;
  transition-duration: 300ms;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;
}
.todo-container .todo--footer .btn::after {
  color: #f2a154;
  content: ']';
  display: block;
  font-size: 1.5em;
  top: 5px;
  right: 30px;
  opacity: 0;
  position: absolute;
  transition: all 300ms ease-in-out;
  transition-property: all;
  transition-duration: 300ms;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;
}
.todo-container .todo--footer .btn:hover::before {
  left: 15px;
  opacity: 1;
}
.todo-container .todo--footer .btn:hover::after {
  right: 15px;
  opacity: 1;
}

/* SELECT-BTN */
.todo-container .select-btn {
  position: absolute;
  width: 180px;
  height: 180px;
  bottom: 0;
  left: 0;
  border-radius: 0 85% 0 0;
  background-color: rgba(247, 246, 231, 0.9);
}

.todo-container .select-btn .mark {
  position: absolute;
  width: 18px;
  height: 28px;
}

.todo-container .select-btn .mark--green {
  transform: rotateX(22.5deg);
}
.todo-container .select-btn .mark--lightgreen {
}
.todo-container .select-btn .mark--orange {
}
.todo-container .select-btn .mark--grey {
}

.todo-container .material-icons.close {
  position: absolute;
  bottom: 20px;
  left: 13px;
  font-size: 40px;
  font-weight: 700;
  color: #a4a79d;
}

